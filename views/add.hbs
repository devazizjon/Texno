<div class="container">
<h1>Add car page</h1>
    <div class="row">
        <div class="input-field col s12">
  <form action="/add" method="POST">
          <input
           id="title"
            type="text"
             class="validate"
             required
             name="title"
             >
          <label 
          for="model">Texno model</label>
           <span class="helper-text" data-error="Write car modul"></span>
        </div>
        <div class="input-field col s12">
          <input 
          id="price" 
          type="number" 
          class="validate"
          required min="1"
          name="price"
          >
          <label for="price">Texno price</label>
           <span class="helper-text" data-error="wrong" data-success="Write car price"></span>
        </div>
        <div class="input-field col s12">
          <input 
          id="img" 
          type="text" 
          class="validate"
          required
          name="img"
          >
         <label for="img"> Texno img</label>
           <span class="helper-text" data-error="wrong" data-success="Write car img"></span>
        </div>
        <button class="btn btn-primary">Send</button>
</form>
      </div>
</div>